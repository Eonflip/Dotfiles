vscode "ms-vscode-remote.remote-ssh-edit"               # Remote development inside containers or SSH
vscode "ms-vscode.cmake-tools"                          # CMake project management
vscode "ms-vscode.cpptools"                             # C/C++ IntelliSense, Debugging, Build support
vscode "ms-vscode.cpptools-extension-pack"              # C/C++ IntelliSense, Debugging, Build support
vscode "ms-vscode.cpptools-themes"                      # C/C++ IntelliSense, Debugging, Build support
